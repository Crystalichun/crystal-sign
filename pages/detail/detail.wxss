page{
    padding: 15px 0;
    height: 100%;
    width: 750rpx;
    background: radial-gradient(#708aff 40%, #645af9 100%);
    color: #fff;
}
.sign-basic {
    width: 100%;
    text-align: center;
}

.sign-basic image{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.sign-label {
    display: flex;
    flex-flow: row wrap;
}

.sign-label .sign-label-item {
    width: 33.3%;
    text-align: center;
    border-radius: 50%;
    margin: 15px 0;
}

.sign-label .sign-label-item .sign-label-text{
   color: #fdf3a6;
}

.sign-label .sign-label-item .sign-label-name {
    font-size: 12px;
    color: #cedbff
}

.sign-luck {
    margin: 15px;
    color: #555;
    padding: 15px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.5);
    font-size: 14px;
}

.sign-luck text {
     color: #d849c5;
    font-size: 16px;
}

.sign-desc {
    margin: 15px;
    padding: 15px;
    border-radius: 5px;
    background: rgba(62, 81, 210, 0.22);
    font-size: 14px;
}

.sign-desc text {
    color: #67eade;
    font-size: 16px;
}
